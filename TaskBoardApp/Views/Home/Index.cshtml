@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">
        TaskBoard: Таблото, създадено за твоите задачи</h1>
</div>

<hr />

<section class="home-page">
    @if (!User.Identity.IsAuthenticated)
    {
        <h1 class="text-center">Добре дошли в приложението - TaskBoard!</h1>
    }
    else
    {
        <h1 class="text-center">Здравейте, @User.Identity.Name!</h1>
    }
    <hr class="hr-2 bg-secondary" />
    <h4 class="mt-4 text-center">TaskBoard е тук, за да следи вашите задачи!.</h4>
    <br />
    <span class="boardSpan">Tasks: <b>@Model.AllTasksCount</b></span>
    <ul>
        @foreach (var board in Model.BoardsWithTasksCount)
        {
            <li>
                <span class="boardSpan">@board.BoardName: <b>@board.TasksCount</b></span>
            </li>
        }
    </ul>
    @if (Model.UserTasksCount > -1)
    {
        <h5>You have: <b>@Model.UserTasksCount</b> tasks</h5>
    }
</section>